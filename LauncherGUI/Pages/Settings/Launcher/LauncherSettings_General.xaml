<UserControl x:Class="LauncherGUI.Pages.Settings.Launcher.LauncherSettings_General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox x:Name="ComboBoxLanguage" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Width="170" IsReadOnly="True" SelectedIndex="0" FontSize="16" SelectionChanged="ComboBoxLanguage_SelectionChanged">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Deutsch"/>
        </ComboBox>
        <Button x:Name="LauncherSettingsGeneralComboBoxLanguageLabel" Style="{DynamicResource ListButton}" Content="{DynamicResource SettingsLauncherGeneralDropDownLabelText}" Foreground="#D8FFFFFF" HorizontalContentAlignment="Left" Margin="10,18,580,397"/>
    </Grid>
</UserControl>
