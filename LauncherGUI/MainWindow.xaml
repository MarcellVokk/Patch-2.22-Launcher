<Window x:Class="LauncherGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherGUI"
        mc:Ignorable="d"
        Title="Battle for Middle-Earth Launcher" Height="720" Width="1280" MinHeight="720" MinWidth="1000" Icon="/MainIcon.ico" Background="#15171e" Foreground="#c1bcc8">
    <Window.Resources>
        <Style x:Key="ButtonHovered" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#303237" TargetName="Border" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="UnderlinedButton" TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="#2295ff"/>
            <Setter Property="BorderThickness" Value="0 0 0 5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Border BorderThickness="0" Margin="160,63,140,0" Background="#23252b" CornerRadius="5,5,5,5" Height="86" VerticalAlignment="Top" />
        <Grid Margin="160,63,140,0" Height="86" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Style="{DynamicResource ButtonHovered}" x:Name="GameBFME1" Grid.Column="0" Height="86" Width="135" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ButtonGameBFME1_Click" Cursor="Hand">
                <Image Source="/LauncherGUI;component/img/lotrbfme.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" Height="64"/>
                <Button.ToolTip>
                    <ToolTip>
                        The Battle for Middle-Earth
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Style="{DynamicResource ButtonHovered}" x:Name="GameBFME2" Grid.Column="1" Height="86" VerticalAlignment="Center" Click="ButtonGameBFME2_Click" Cursor="Hand" HorizontalAlignment="Center" Width="130">
                <Image Source="/LauncherGUI;component/img/lotrbfme2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" Height="64"/>
                <Button.ToolTip>
                    <ToolTip>
                        The Battle for Middle-Earth II
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Style="{DynamicResource ButtonHovered}" x:Name="GameBFME2EP1" Grid.Column="2" Height="86" Width="136" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ButtonGameBFME2EP1_Click" Cursor="Hand">
                <Image Source="/LauncherGUI;component/img/lotrbfme2ep1.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" Height="64"/>
                <Button.ToolTip>
                    <ToolTip>
                        The Battle for Middle-earth II: Rise of the Witch-king
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </Grid>
        <DataGrid Margin="340,180,140,140" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#00000000" Foreground="#c1bcc8" HorizontalGridLinesBrush="#c1bcc8" VerticalGridLinesBrush="#c1bcc8" ColumnHeaderHeight="50" RowHeaderWidth="0" HeadersVisibility="Column" RowHeight="60" RowBackground="#15171e">
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#15171e"/>
                    <Setter Property="BorderBrush" Value="#c1bcc8"/>
                    <Setter Property="BorderThickness" Value="2,2,2,2"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</Window>
