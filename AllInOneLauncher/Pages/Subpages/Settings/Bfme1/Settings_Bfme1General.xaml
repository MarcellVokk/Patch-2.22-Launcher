<UserControl x:Name="BFME1ChildSettingsWindow" x:Class="AllInOneLauncher.Pages.Subpages.Settings.Launcher.Settings_Bfme1General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="14">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="{DynamicResource SettingsBFMEGeneralLanguageDropDownLabelText}" d:Text="Language" HorizontalAlignment="Left" Foreground="white"/>
            <ComboBox Grid.Column="0" Grid.Row="1" x:Name="ComboBoxLanguage" HorizontalAlignment="Left" Margin="0,5,0,0" Width="250" IsReadOnly="True" SelectionChanged="ComboBoxLanguage_SelectionChanged">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Deutsch"/>
            </ComboBox>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{DynamicResource SettingsBFMEGeneralGraphicsAPIDropDownLabelText}" d:Text="Graphics API" HorizontalAlignment="Left" Foreground="white"/>
            <ComboBox Grid.Column="1" Grid.Row="1" x:Name="ComboBoxGraphicsAPI" HorizontalAlignment="Left" Margin="0,5,0,0" Width="250" IsReadOnly="True" SelectionChanged="ComboBoxGraphicsAPI_SelectionChanged">
                <ComboBoxItem Content="DirectX 9.0c"/>
                <ComboBoxItem Content="Vulkan"/>
            </ComboBox>
            <TextBlock Grid.Column="0" Grid.Row="3" Text="{DynamicResource SettingsBFMEGeneralResolutionDropDownLabelText}" d:Text="Resolution" HorizontalAlignment="Left" Foreground="white"/>
            <ComboBox Grid.Column="0" Grid.Row="4" x:Name="ComboBoxResolution" HorizontalAlignment="Left" Margin="0,5,0,0" Width="250" IsReadOnly="True" SelectionChanged="ComboBoxResolution_SelectionChanged"/>
        </Grid>
        <TextBlock Text="{DynamicResource SettingsBFMEGeneralCDKeyLabelText}" d:Text="Serialnumber" HorizontalAlignment="Left" Margin="0,20,0,0" Foreground="white"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="510" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="TextBoxCDKey" Height="40" TextWrapping="Wrap" Text="TextBox" Width="500" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="26" MaxLength="24"/>
            <Button x:Name="ButtonChangeCdKey" Grid.Column="1" Height="40" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0" Click="ButtonChangeCdKey_Click">
                <Grid Width="168" Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="IconUAC" Source="pack://application:,,,/Resources/Images/uac.png" HorizontalAlignment="center"/>
                    <TextBlock Grid.Column="1" Margin="15, 0, 0, 0" Text="{DynamicResource SettingsBFMEGeneralCDKeyButtonText}" d:Text="Change Serial"/>
                </Grid>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
