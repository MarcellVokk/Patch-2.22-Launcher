<UserControl x:Class="AllInOneLauncher.Elements.DiskDriveHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllInOneLauncher.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="200">
    <Grid>
        <TextBlock x:Name="name" Text="SSD (C:)" FontSize="12" FontWeight="Medium" Foreground="White"/>
        <TextBlock x:Name="space" Text="10.9 GB FREE" FontSize="11" FontWeight="Medium" Foreground="White" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
